{

  "compilerOptions": {
   "target": "es2018",
   "lib": ["es5", "es6", "ES2018"],
   "experimentalDecorators": true,
   "emitDecoratorMetadata": true,
   "module": "commonjs",
   "moduleResolution": "node",
   "resolveJsonModule": true,
   "allowJs": true,
   "outDir": "./dist",
   "rootDir": "./",
   "esModuleInterop": true,
   "forceConsistentCasingInFileNames": true,
   "strict": true,
   "noImplicitAny": true,
   "strictPropertyInitialization": false
  },
  "ts-node": {
   "files": true
  }
 }
 